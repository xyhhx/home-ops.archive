{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": ["^kubernetes/.*resources.yaml", "^kubernetes/.*config.yaml", "^kubernetes/.*kustomization.yaml", "^kubernetes/.*helm-release.yaml"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
